<Window x:Class="WpfApp17.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp17"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="450">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Height="80" Margin="0,40,0,0">
                <Label  Content="Login:" Width="130" FontSize="30" Padding="40,15,0,0"/>
                <TextBox  x:Name="Log1" Text="Text" Height="40" Width="300" FontSize="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="80" Margin="0,40,0,0">
                <Label Content="Password:" Width="130" FontSize="30" Padding="0,15,0,0"/>
                <TextBox x:Name="Pas1" Text="Text" Height="40" Width="300" FontSize="30"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Height="80" Margin="0,40,0,0">
                <Button  Content="Зареєструватися" Height="38" Width="200" Click="Button_Click"/>
                <Button Content="Увійти" Height="38" Width="150" Margin="0,2,0,0" Click="Button_Click_1"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
